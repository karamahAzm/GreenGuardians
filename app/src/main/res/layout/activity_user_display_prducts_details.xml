<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main"
        android:background="@color/lightgreen"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UserDisplayPrductsDetails">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SuppllierdetailTitle"
            android:text="Title"
            android:layout_marginTop="200dp"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:textColor="@color/gray"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/SuppllierdetailImage"
            android:background="@drawable/brdr"
            android:padding="8dp"
            android:layout_gravity="center"
            android:src="@drawable/img"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SuppllierDetaildescription"
            android:text="Description"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:textColor="@color/gray"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Order Item"
            android:id="@+id/orderBtn"
            android:layout_marginLeft="70dp"
            android:textSize="23sp"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/gray" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

