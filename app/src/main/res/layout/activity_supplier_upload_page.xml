<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/lightgreen"
    tools:context=".SupplierUploadPage">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/beige"
            android:padding="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img"
                android:id="@+id/LoadSupplierImage"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/LoadSupplierTitle"
                android:background="@drawable/brdr"
                android:layout_marginTop="20dp"
                android:padding="16dp"

                android:hint="Please Enter the title "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/LoadSupplierDesc"
                android:background="@drawable/brdr"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Please Enter the Description" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/SaveSuppBtn"
                android:textSize="23sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/gray"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>