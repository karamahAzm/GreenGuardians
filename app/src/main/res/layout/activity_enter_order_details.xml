<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".EnterOrderDetails">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Enter Order Details"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textSize="25sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/todayDate"
        android:background="@color/bluebb"
        android:layout_marginTop="90dp"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter today's date"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loadCustomerName"
        android:background="@color/bluebb"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter your name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loadCustomerAddress"
        android:background="@color/bluebb"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter your address"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loadCustomerPhone"
        android:background="@color/bluebb"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter your phone number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loadItemName"
        android:background="@color/bluebb"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter the item's name "/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/loadnumberofItems"
        android:background="@color/bluebb"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter the number of items "/>

    <Button
        android:id="@+id/confirmOrderBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/gray"
        android:text="Confirm Order"
        android:textSize="23sp"/>

</LinearLayout>